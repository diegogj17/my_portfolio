---
interface Props {
	title: string;
	body: string;
	href: string;
	image?: string;
	alt?: string;
	tags?: string[];
	stars?: number;
	language?: string;
	isGitHubRepo?: boolean;
}

const { href, title, body, image, alt, tags, stars, language, isGitHubRepo = false } = Astro.props;
---

<li class="link-card">
	<a href={href} target="_blank">
		{image && <img src={image} alt={alt || title} class="card-image" />}
		<h2>
			{title}
			{isGitHubRepo && stars !== undefined && (
				<span class="github-stars">â˜… {stars}</span>
			)}
		</h2>
		<p>
			{body}
		</p>
		<div class="card-footer">
			{language && <span class="repo-language">{language}</span>}
			{tags && tags.length > 0 && (
				<div class="tags">
					{tags.slice(0, 3).map((tag: string) => (
						<span class="tag">{tag}</span>
					))}
				</div>
			)}
		</div>
	</a>
</li>